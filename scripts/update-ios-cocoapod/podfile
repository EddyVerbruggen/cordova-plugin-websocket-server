platform :ios, '7.0'
pod 'PocketSocket', :git => 'https://github.com/couchbasedeps/PocketSocket.git'

post_install do |installer|
  require './cocoapod-to-cordova'

  # POD_NAME must be the exact same string as specified above
  build = CocoapodToCordovaBuilder.new('PocketSocket', installer.project)

  # The directory path where plugin.xml lives
  build.root_path = File.expand_path(File.join('.', '../..'))

  # The root installation directory. Relative to the root_path.
  build.destination = 'src/ios/vendor'

  # Configuration options. See README examples.
  build.configure({
    product: { name: "libPocketSocket.a"},
    localization: 'en',
    headers: { 
	exclude: [
	    'private_header.h',
	    'PSWebSocketBuffer.h',
	    'PSWebSocketDeflater.h',
	    'PSWebSocketDriver.h',
	    'PSWebSocketInflater.h',
	    'PSWebSocketInternal.h',
	    'PSWebSocketNetworkThread.h',
	    'PSWebSocketUTF8Decoder.h'
        ]
    }
  })

  # Apply the additional build settings to the xcode_project
  build.update_plugin!
end
